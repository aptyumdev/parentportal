<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_vu_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.ParentPortal">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/main_activity_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeacherActivity"
            android:exported="false"
            android:label="@string/teacher_activity_title" />
        <activity
            android:name=".ParentActivity"
            android:exported="false"
            android:label="@string/parent_activity_title" />
        <activity
            android:name=".StudentListActivity"
            android:exported="false"
            android:label="@string/student_list_title" />

        <activity
            android:name=".StudentAddActivity"
            android:exported="false"
            android:label="@string/student_add_title" />

        <activity
            android:name=".StudentDetailActivity"
            android:exported="false"
            android:label="@string/student_detail_title" />
    </application>

</manifest>
